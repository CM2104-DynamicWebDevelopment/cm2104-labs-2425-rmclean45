        <div class="containerLogin">
            <p class="ContainerHeader"><b>Create Account</b></p>
            <form id="input-bar" action="/registerUser" method="POST">
                <label><b>Username</b></label><br>
                <input type="text" name="username" placeholder="VeryCoolUser"><br><br>
                <label><b>Email</b></label><br>
                <input type="text" name="email" placeholder="VeryCoolEmail@gmail.com"><br><br>
